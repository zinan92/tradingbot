# Binance API Configuration
BINANCE_API_KEY=your_api_key_here
BINANCE_API_SECRET=your_api_secret_here
BINANCE_TESTNET_API_KEY=your_testnet_api_key_here
BINANCE_TESTNET_API_SECRET=your_testnet_api_secret_here

# Trading Configuration
TRADING_MODE=TESTNET  # TESTNET or MAINNET
TRADING_ENABLED=false  # Master switch for live trading

# Risk Parameters
MAX_LEVERAGE=10
MAX_POSITION_SIZE_USDT=10000
MAX_POSITIONS=5
DAILY_LOSS_LIMIT_USDT=500
MAX_DRAWDOWN_PERCENT=10

# Position Sizing
DEFAULT_POSITION_SIZE_PERCENT=2  # % of portfolio per trade
USE_KELLY_CRITERION=false
KELLY_FRACTION=0.25  # Conservative Kelly

# Order Configuration
DEFAULT_ORDER_TYPE=MARKET  # MARKET or LIMIT
LIMIT_ORDER_OFFSET_PERCENT=0.1  # For limit orders
STOP_LOSS_PERCENT=2.0
TAKE_PROFIT_PERCENT=5.0

# WebSocket Configuration
WS_RECONNECT_DELAY=5
WS_MAX_RECONNECT_DELAY=60
WS_HEARTBEAT_INTERVAL=30

# Database Configuration
DATABASE_URL=postgresql://user:password@localhost:5432/tradingbot
REDIS_URL=redis://localhost:6379

# Monitoring
ENABLE_METRICS=true
METRICS_PORT=9090
LOG_LEVEL=INFO
ALERT_WEBHOOK_URL=https://hooks.slack.com/services/xxx

# Strategy Settings
AUTO_EXECUTE_SIGNALS=false  # Auto-execute strategy signals
SIGNAL_CONFIDENCE_THRESHOLD=0.7  # Min confidence to execute
SIGNAL_STRENGTH_THRESHOLD=0.5  # Min strength to execute